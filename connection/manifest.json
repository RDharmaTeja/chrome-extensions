{
  "manifest_version": 2,

  "name": "Internet Connection",
  "description": "Check Internet Connection",
  "version": "1.0",
  "background": 
    {
        "scripts": ["background.js"]
    },
  "browser_action": {
    "default_icon": "red.png",
    "default_popup": "popup.html"
  },
  "permissions": [
      "pageCapture",
    "tabs",
    "notifications" ,
    "activeTab",
    "https://ajax.googleapis.com/",
    "http://localhost/"
  ]
}