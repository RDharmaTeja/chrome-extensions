{
  "manifest_version": 2,

  "name": "Placement Status",
  "description": "Shows shortlist status",
  "version": "1.0",
  "background": 
    {
        "scripts": ["background.js"]
    },
  "browser_action": {
    "default_icon": "logo.png",
    "default_popup": "popup.html"
  },
  "permissions": [
      "pageCapture",
    "tabs",
    "notifications" ,
    "activeTab",
    "https://ajax.googleapis.com/",
    "http://localhost/",
    "http://10.22.28.218:8000/",
    "http://10.22.30.240:8000/"
  ],
  "content_security_policy": "script-src 'self' https://apis.google.com; object-src 'self'"
}